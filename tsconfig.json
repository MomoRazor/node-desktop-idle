{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"lib": ["esnext"],
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"allowImportingTsExtensions": true,
		"noEmit": true
	},
	"include": ["src/**/*", "src/**/*.test.ts", "src/global.d.ts"],
	"exclude": ["node_modules", "dist"]
}
